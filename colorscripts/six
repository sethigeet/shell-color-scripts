#!/bin/sh

# ANSI Color -- use these variables to easily have different color
#    and format output. Make sure to output the reset sequence after
#    colors (f = foreground, b = background), and use the 'off'
#    feature for anything you turn on.

esc=""

redf="${esc}[31m"
greenf="${esc}[32m"
yellowf="${esc}[33m"
bluef="${esc}[34m"
purplef="${esc}[35m"
cyanf="${esc}[36m"

redfbright="${esc}[31m"
greenfbright="${esc}[32m"
yellowfbright="${esc}[33m"
bluefbright="${esc}[34m"
purplefbright="${esc}[35m"
cyanfbright="${esc}[96m"

boldon="${esc}[1m"

reset="${esc}[0m"

cat <<EOF
 ${redf}â–’â–’â–’â–’${reset} ${boldon}${redfbright}â–’â–’${reset}   ${greenf}â–’â–’â–’â–’${reset} ${boldon}${greenfbright}â–’â–’${reset}   ${yellowf}â–’â–’â–’â–’${reset} ${boldon}${yellowfbright}â–’â–’${reset}   ${bluef}â–’â–’â–’â–’${reset} ${boldon}${bluefbright}â–’â–’${reset}   ${purplef}â–’â–’â–’â–’${reset} ${boldon}${purplefbright}â–’â–’${reset}   ${cyanf}â–’â–’â–’â–’${reset} ${boldon}${cyanfbright}â–’â–’${reset} 
 ${redf}â–’â–’ â– ${reset} ${boldon}${redfbright}â–’â–’${reset}   ${greenf}â–’â–’ â– ${reset} ${boldon}${greenfbright}â–’â–’${reset}   ${yellowf}â–’â–’ â– ${reset} ${boldon}${yellowfbright}â–’â–’${reset}   ${bluef}â–’â–’ â– ${reset} ${boldon}${bluefbright}â–’â–’${reset}   ${purplef}â–’â–’ â– ${reset} ${boldon}${purplefbright}â–’â–’${reset}   ${cyanf}â–’â–’ â– ${reset} ${boldon}${cyanfbright}â–’â–’${reset}  
 ${redf}â–’â–’ ${reset}${boldon}${redfbright}â–’â–’â–’â–’${reset}   ${greenf}â–’â–’ ${reset}${boldon}${greenfbright}â–’â–’â–’â–’${reset}   ${yellowf}â–’â–’ ${reset}${boldon}${yellowfbright}â–’â–’â–’â–’${reset}   ${bluef}â–’â–’ ${reset}${boldon}${bluefbright}â–’â–’â–’â–’${reset}   ${purplef}â–’â–’ ${reset}${boldon}${purplefbright}â–’â–’â–’â–’${reset}   ${cyanf}â–’â–’ ${reset}${boldon}${cyanfbright}â–’â–’â–’â–’${reset}  
EOF
